{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",         // o "bundler" si usas TS >= 5
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"]            // ⬅️ clave: mete los tipos de Vite
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
